package controlstructures;

public class NumberPattern4 {

	public static void main(String[] args) {
		int x = new java.util.Scanner(System.in).nextInt();
		for (int r = x; r>=1;r-- ) {
			for (int c =1;c<=r;c++)
				System.out.print(c);
			for (int c =r;c>=1;c--)
				System.out.print(c);
			System.out.println();
			
		}

	}

}
/*
 * Input 5
 * 1234554321	5
 * 1234  4321	4
 * 123	  321	3
 * 12      21	2
 * 1        1	1
 * 12      21
 * 123    321
 * 1234  4321
 * 1234554321
 */
