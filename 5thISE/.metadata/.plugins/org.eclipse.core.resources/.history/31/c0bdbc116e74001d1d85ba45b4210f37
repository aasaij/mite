package controlstructures;

public class NumberPattern4 {

	public static void main(String[] args) {
		int x;// = new java.util.Scanner(System.in).nextInt();
		x = 5;
		for (int r = x; r>=1;r-- ) {
			//Printing left triangle
			for (int c =1;c<=r;c++)
				System.out.print(c);
			//printing the space between two triangle
			for (int c = 1; c<=(x-r) * 2; c++)
				System.out.print(" ");
			//printing right triangle
			for (int c =r;c>=1;c--)
				System.out.print(c);
			System.out.println();
			
		}
		for (int r = 1; r<=x;r++ ) {
			//Printing left triangle
			for (int c =1;c<=r;c++)
				System.out.print(c);
			//printing the space between two triangle
			for (int c = 1; c<=(x-r) * 2; c++)
				System.out.print(" ");
			//printing right triangle
			for (int c =r;c>=1;c--)
				System.out.print(c);
			System.out.println();
			
		}

	}

}
/*
 * Input 5
 * 1234554321	5
 * 1234  4321	4
 * 123	  321	3
 * 12      21	2
 * 1        1	1
 * 12      21
 * 123    321
 * 1234  4321
 * 1234554321
 */
